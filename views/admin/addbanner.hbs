<div class="row">
    <div class="col-md-6 m-auto ">
        <div class="container mt-5 pl-5">
            <h5 class=" text-danger">ADD BANNER</h5><br>
            <form action="/admin/addbanner" method="post" enctype="multipart/form-data" id="Form">

                <div class="form-group">
                    <label for="">Image</label>
                     <img src="/food-images/{{banner._id}}.jpg" alt="" style="width:100px; height: auto" id="imgView">

                    <input type="file" class="form-control" name="Image" placeholder="Image"  onchange="viewImage(event)" required>

                </div>
                <div class="form-group">
                    <label for="">Heading</label>
                    <input type="text" class="form-control" name="Heading" placeholder="Heading" required>
                </div> <br>


                <div class="form-group">
                    <label for="">Subtitle</label>
                    <input type="text" class="form-control" name="Subtitle" placeholder="Subtitle" required>

                </div> <br>

                <button type="submit" class="btn btn-outline-danger float-right">Submit</button>
            </form>
        </div>
    </div>
</div>

<script>
    function viewImage(event){
        document.getElementById('imgView').src=URL.createObjectURL(event.target.files[0])
    }
</script>


