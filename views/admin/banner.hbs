<div class="container">
  <a href="/admin/addbanner"> <button type="submit" class="btn btn-danger float-end my-3">Add Banner</button></a>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">No</th>
        <th scope="col">Image</th>
        <th scope="col">Heading</th>
        <th scope="col">Subtitle</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {{#each banner}}
      <tr>
        <td>{{inc @index}}</td>
        <td><img src="/banner-images/{{this._id}}.jpg" alt="" srcset="" id="Image" style="width:150px;height:90px"></td>
        <td>{{this.Heading}}</td>
        <td>{{this.Subtitle}}</td>
        <td><button class="btn btn-primary" onclick="sweetalertClick1('/admin/editbanner/{{this._id}}')">Edit</button>
          <button class="btn btn-danger" onclick="sweetalertClick2('/admin/delete-banner/{{this._id}}')">Delete</button>
        </td>
      </tr>
    </tbody>
    {{/each}}
  </table>
</div>
<script>


  function sweetalertClick1(value) {
    Swal.fire({
      title: 'Are you sure?',
      text: "You won't be able to revert this!",
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#3085d6',
      cancelButtonColor: '#d33',
      confirmButtonText: 'Yes, Edit it!'
    }).then((result) => {
      if (result.isConfirmed) {
        window.location = value
      }
    })
  }
  function sweetalertClick2(value1) {
    Swal.fire({
      title: 'Are you sure?',
      text: "You won't be able to revert this!",
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#3085d6',
      cancelButtonColor: '#d33',
      confirmButtonText: 'Yes, delete it!'
    }).then((result) => {
      if (result.isConfirmed) {
        {
          window.location = value1
        }
      }
    })
  }
</script>