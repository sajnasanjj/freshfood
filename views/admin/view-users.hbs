

<div class="container m-5 p-5">
<table class="table">
   
  <thead>

    <tr>
      <th scope="col">No</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Mobile</th>
      <th scope="col">Actions</th>
     
    </tr>
  </thead>
  <tbody>
       {{#each user}}
    <tr>
      <td>{{inc @index}}</td>      
      <td>{{this.Name}}</td>
      <td>{{this.Email}}</td>
      <td>{{this.Mobile}}</td>
   
       <td>{{#if this.isUnblocked}}
            <button class="btn btn-danger" onclick="sweetalertClick1('/admin/edit-user/{{this._id}}')"> Block</button>
           {{else}}
            <button class="btn btn-success" onclick="sweetalertClick2('/admin/editt-user/{{this._id}}')"> Unblock</button>
           {{/if}}
      </td>
    </tr>
  </tbody>
  {{/each}}
</table>

</div>


<script>
   function sweetalertClick1(value){
  Swal.fire(
    {
  title: 'Are you sure?',
  text: "Block",
  icon: 'warning',
  showCancelButton: true,
  confirmButtonColor: '#3085d6',
  cancelButtonColor: '#d33',
  confirmButtonText: 'Blocked!'
}).then((result) => {
  if (result.isConfirmed) {
    {window.location=value
    }
  }
  })
}

  function sweetalertClick2(value1){
    Swal.fire({
   title: 'Are you sure?',
  text: "Unblock!",
  icon: 'warning',
  showCancelButton: true,
  confirmButtonColor: '#3085d6',
  cancelButtonColor: '#d33',
  confirmButtonText: 'Unblocked!'
}).then((result) => {
  if (result.isConfirmed) {
    {window.location =value1
    }
  }
})
  }


</script>


















  
