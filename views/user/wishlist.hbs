<!-- product section -->
<div class="product-section mt-100 mb-150" id="specials">
	<div class="container">
		<div class="row">
			<div class="col-lg-8 offset-lg-2 text-center">
				<div class="section-title">
					<h3><span class="orange-text">My</span> Wishlist</h3>
				</div>
			</div>
		</div>

		<div class="row">
			{{#each food}}
			<div class="col-lg-3 col-md-6 text-center">

				<div class="single-product-item">
					<div class="product-image">
						<a href="/single/{{this._id}}"><img src="/food-images/{{this.food._id}}.jpg" alt="Image"
								style="height:15em;width:15em;"></a>
					</div>
					<span class="category" href="/cat">{{this.food.Category}}</span>



					<button onclick="deleteWish('{{this.food._id}}')" class="text-white"
						style="background-color:#f1e8e8; border-radius:10px; height:30px;width:30px;button-decoration:none;"><i
							class="fas fa-heart text-danger"></i><a href="" class="btn text-white"></a></button>

					<h3>{{this.food.Name}}</h3>
					<h5 class="product-price">Rs {{this.food.Price}} </h5>
					<button onclick="addToCart('{{this.food._id}}')"
						style="background-color:#ec7a1c; border-radius:20px;"><a href="/#specials"
							class="btn text-white"><i class="fas fa-shopping-cart"></i> Add to Cart</a></button>
				</div>
			</div>

			{{/each}}
		</div>
	</div>
</div>

<script>
	function deleteWish(fudId) {
		$.ajax({
			url: '/delete-wish/' + fudId,
			method: 'get',
			success: (response) => {

			}
		})
	}

	function addToWish(fudId) {
		$.ajax({
			url: '/add-to-wish/' + fudId,
			method: 'get',
			success: (response) => {
				if (response.status) {
					let count = $('#wish-count').html()
					count = parseInt(count) + 1
					$("#wish-count").html(count)
				}
			}
		})
	}

</script>