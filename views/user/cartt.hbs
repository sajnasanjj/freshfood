									<span id ="{{this.food._id}}">{{this.quantity}}</span>
									<button class="btn ml-3" style="border-radius:20px;" onclick="changeQuantity('{{this._id}}','{{this.food._id}}','{{../user}}',1)"><h5 style="color:#ec7a1c;">+</h5></button>
									</td>
								</tr>
								{{/each}}
							</tbody>
						</table>
