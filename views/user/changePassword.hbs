<div class="container">
    <div class="main-body pt-5">
          <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
              <div class="card">
                <div class="card-body">
                  <div class="d-flex flex-column align-items-center text-center">
                    <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                    <div class="mt-3">
                      <h4>{{userDetailss.Name}}</h4>
                    </div>
                  </div>
                </div>
              </div>
              <div class="card mt-3"> 
              
              </div>
            </div> 
            <div class="col-md-8">
              <div class="card mb-3">
                <div class="card-body">
                    <form action="/changePassword/{{user._id}}" method="post" id="Form">
                    <div class="d-flex flex-wrap justify-content-between bottom-content">
         {{!-- {{#if pwdCompareErr}}
        <p class="error mt-3 text-warning">Invalid Email and Password</p>
        {{/if}}
        {{#if currentPwdErr}}
        <p class="error mt-3 text-warning">Enter new Password</p>
        {{/if}} --}}
    </div>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Current Password</h6>
                    </div>
                     <div class="col-sm-9 text-secondary">
                   <input type="password" name="Password" id="Password" required>
                               <span id="errorPassword" style="color:red"></span>

                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">New Password</h6>
                    </div>
                     <div class="col-sm-6 text-secondary">
                    <input type="password" name="New" id="New" required>
                     <span id="errorNew" style="color:red"></span>

                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Confirm Password</h6>
                    </div>
                   <div class="col-sm-7 text-secondary">
                   <input type="password" name="Confirm" id="Confirm" required>
                   <span id="errorConfirm" style="color:red"></span>
                   </div>
                   </div>
                   <hr>
                  
                 
                  <div class="row">
                       <div class="col-sm-12">
                          <button class="btn btn-outline-warning" type="submit">Change</button>
                       </div>
                       
                  </div>

                  </form>
                </div>
              </div>

               <div class="row gutters-sm">
                 {{#each address}}
                <div class="col-sm-6 mb-3">
                  
                  <div class="card h-100">
                    <div class="card-body">
                      <h5 class="d-flex align-items-center mb-3"><i class="material-icons text-warning mr-2">1</i>Address</h5>
                      <hr>
                    <div class="row">
                    <div class="col-sm-4">
                      <h6 class="mb-0">Flat</h6>
                    </div>
                    <div class="col-sm-8 text-secondary mb-3">
                   	<p>{{this.Flat}}</p>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-sm-4 mb-3">
                      <h6 class="mb-0">Place</h6>
                    </div>
                    <div class="col-sm-8 text-secondary mb-3">
                   	<p>{{this.Place}}</p>
                    </div>
                  </div>
                   <div class="row">
                    <div class="col-sm-4 mb-3">
                      <h6 class="mb-0">Street</h6>
                    </div>
                    <div class="col-sm-8 text-secondary mb-3">
                   	<p>{{this.Street}}</p>
                    </div>
                  </div>
                   <div class="row">
                    <div class="col-sm-4 mb-3">
                      <h6 class="mb-0">Pincode</h6>
                    </div>
                    <div class="col-sm-8 text-secondary mb-3">
                   	<p>{{this.Pincode}}</p>
                    </div>
                  </div>
                   <div class="row">
                    <div class="col-sm-4 mb-3">
                      <h6 class="mb-0">Mobile</h6>
                    </div>
                    <div class="col-sm-8 text-secondary mb-3">
                   	<p>{{this.Mobile}}</p>
                    </div>
                  </div>


                     
                    </div>
                  </div>
                </div>
              {{/each}}
              </div> 
      


            </div>
          </div>

        </div>
    </div>

    <script>
  const current = document.getElementById("Password");
  const new = document.getElementById("New");
  const confirm = document.getElementById("Confirm");
  const form = document.getElementById("Form");
  const error1 = document.getElementById("errorPassword");
  const error2 = document.getElementById("errorNew");
  const error3 = document.getElementById("errorConfirm");
  form.addEventListener('submit', (e) => {
    let message1 = []
    let message2 = []
    let message3 = []
    if (current.value === '' || current.value == null) {
      message1.push('Enter the current password')
    }
   
    else if (current.value.length< 3) {
      message1.push('Password should be 3 numbers')
    }
    if (new.value === '' || new.value == null) {
      message2.push('Enter the new password')
    }
    
    else if (new.value.length< 3) {
      message2.push('Password should be 3 numbers')
    }

    if (confirm.value === '' || confirm.value == null) {
      message3.push('Please enter the Confirm')
    }
    
    else if (confirm.value.length< 3) {
      message3.push('Password should be 3 numbers')
    }
    

    if (message1.length > 0) {
      e.preventDefault();
      error1.innerText = message1.join('  ')
    }
    if (message2.length > 0) {
      e.preventDefault()
      error2.innerText = message2.join('  ')
    }
    if (message3.length > 0) {
      e.preventDefault()
      error3.innerText = message3.join('  ')
    }
  })
</script>